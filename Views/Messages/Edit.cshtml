@model GuestBook.Models.Messages

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200;0,6..12,400;0,6..12,500;0,6..12,600;0,6..12,700;0,6..12,800;0,6..12,900;1,6..12,200&family=Philosopher:ital,wght@0,400;0,700;1,400&family=Playfair+Display:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <textarea asp-for="Message" style="width: 500px; height:300px; border:2px solid #60d5da; border-radius: 15px; background-color: #769ad7; font-style:italic">
                
                </textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
               
            </div>
            
            <div class="form-group" style="width: 500px;display:flex; justify-content: space-between">
                <input type="submit" value="Save" class="btn btn-primary"  />
                <div>
                    <a asp-action="Index" style="width:10%; color: #102dcd; text-decoration: none;font-size:20px;font-style:italic; font-weight:800">На главную</a>
                </div>
            </div>
            
        </form>
        
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
